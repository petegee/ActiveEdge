@model ActiveEdge.Models.SessionModel

@{
  ViewBag.Title = "New Session";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Create</h2>
    <ol class="breadcrumb">
      <li>
        @Html.ActionLink("List", "Index")
      </li>
      <li class="active">
        <strong>New Session</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-primary"})
    </div>
  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>New Session</h5>
        </div>
        <div class="ibox-content">

          @using (Html.BeginForm())
          {
            <div class="form-horizontal">
              @Html.AntiForgeryToken()
              @Html.ValidationSummary(true)

              <div class="form-group">
                @Html.LabelFor(model => model.Date, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                  <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>@Html.TextBoxFor(model => model.Date, "{0:dd/MM/yyyy}", new Dictionary<string, object> {{"class", "form-control date"}})
                  </div>

                  @Html.ValidationMessageFor(model => model.Date)
                </div>
              </div>
              @*<div class="form-group">
                @Html.HiddenFor(m => m.ClientId)
                @Html.LabelFor(model => model.ClientFullName, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                  @Html.EditorFor(model => model.ClientFullName)
                  @Html.ValidationMessageFor(model => model.ClientFullName)
                </div>
              </div>*@
              @Html.HiddenFor(model => model.ClientId)
              @Html.EditorFor(model => model.ClientFullName, "StandardFormTextBox")
              @Html.EditorFor(model => model.Feedback, "StandardFormTextBox")
              @*<div class="form-group">
                @Html.LabelFor(model => model.Feedback, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                  @Html.EditorFor(model => model.Feedback)
                  @Html.ValidationMessageFor(model => model.Feedback)
                </div>
              </div>*@

              <div class="form-group">
                @Html.LabelFor(model => model.GoalOrExpectations, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                  @Html.EditorFor(model => model.GoalOrExpectations)
                  @Html.ValidationMessageFor(model => model.GoalOrExpectations)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.AreasOfDiscomfort, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                  <div id="canvasDiv" style="background-image: url('../../Content/clientintake-800x625.png'); background-repeat: no-repeat; background-size: contain;"></div>
                  @Html.HiddenFor(model => model.AreasOfDiscomfort)
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Create" class="btn btn-primary" />
                  @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white" })
                </div>
              </div>

            </div>
          }

        </div>
      </div>
    </div>
  </div>
</div>


@section scripts {
  @Scripts.Render("~/bundles/jqueryval")
  @Scripts.Render(Bundles.Scripts.ActiveEdge)
  @Scripts.Render("~/bundles/soapnotes")
@Scripts.Render("~/plugins/validate")
  @Scripts.Render("~/plugins/dataPicker")
<script src="~/Scripts/site/SoapNotes/drawing.js"></script>
<script type="text/javascript">

    $(document)
      .ready(function () {

        $("#canvasDiv").drawingCanvas();

      });



</script>
}

@section styles
{
  @Styles.Render(Bundles.Css.Summernote)
  @Styles.Render("~/plugins/dataPickerStyles")
}