@model string
<div class="form-group">
  @{ var isFieldRequired = ViewData.ModelMetadata.IsRequired; }

  @Html.LabelFor(model => model)
  @if (isFieldRequired)
  {
    <span>*</span>
  }
  @(isFieldRequired ? Html.TextBoxFor(model => model, new {@class = "form-control required"}) : Html.TextBoxFor(model => model, new {@class = "form-control"}))
</div>